program TestForIn;
{$assertions ON}

var
  item:Int32;
  resStr:String;

//=================================================\\
const staticArr: Array [3..7] of Int32 = [0,1,2,3,4];
begin
  resStr := '';
  for item in staticArr do
    resStr := resStr + ToString(item);
  Assert(resstr = '01234');
end;


