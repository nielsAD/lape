var evalCount:Int32=0;
function SideEffect(): Array of Int32;
begin
  Inc(evalCount);
  Result := [5,4,3,2,1,0];
end;

begin
  for item in SideEffect() do
    continue;
  Assert(evalCount = 1);
end;


