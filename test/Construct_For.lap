procedure TestFor(Times: Integer);
begin
  for 1 to Times do
    WriteLn('hoi+')
  else
    WriteLn('No loop eh');

  for -1 downto Times do
    WriteLn('hoi-')
  else
    WriteLn('No loop eh');

  for 1 to Times with 2 do
    WriteLn('hoi++');
  for -1 downto Times with 2 do
    WriteLn('hoi--');
end;

var
  i: Integer;
begin
  for i := -2 to 2 do
  begin
    WriteLn('TestFor ', i, ': ');
    TestFor(i);
    WriteLn('');
  end;
end;
